services:
  openclaw:
    image: ghcr.io/openclaw/openclaw:latest
    container_name: openclaw-gateway
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    mem_limit: 1g
    ports:
      - "127.0.0.1:18789:18789"
    volumes:
      - /home/openclaw/.openclaw:/home/node/.openclaw
    env_file:
      - /etc/openclaw/gateway.env
    command: ["gateway", "--port", "18789", "--verbose"]
{% if access_method == "https" %}

  traefik:
    image: traefik:v3.3
    container_name: traefik
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    cap_drop:
      - ALL
    cap_add:
      - NET_BIND_SERVICE
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: "0.50"
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - /opt/openclaw/acme:/acme
      - /opt/openclaw/traefik:/config:ro
{% if acme_challenge == "dns" %}
    environment:
      - DO_AUTH_TOKEN={{ acme_dns_token }}
{% endif %}
    command:
      - "--entrypoints.web.address=:80"
      - "--entrypoints.websecure.address=:443"
      - "--entrypoints.web.http.redirections.entrypoint.to=websecure"
      - "--providers.file.directory=/config"
      - "--providers.file.watch=true"
      - "--certificatesresolvers.letsencrypt.acme.email={{ acme_email }}"
      - "--certificatesresolvers.letsencrypt.acme.storage=/acme/acme.json"
{% if acme_challenge == "dns" %}
      - "--certificatesresolvers.letsencrypt.acme.dnschallenge=true"
      - "--certificatesresolvers.letsencrypt.acme.dnschallenge.provider=digitalocean"
{% else %}
      - "--certificatesresolvers.letsencrypt.acme.httpchallenge=true"
      - "--certificatesresolvers.letsencrypt.acme.httpchallenge.entrypoint=web"
{% endif %}
{% endif %}
{% if enable_backup | bool %}

  restic:
    image: restic/restic:latest
    container_name: openclaw-backup
    profiles:
      - backup
    volumes:
      - /home/openclaw/.openclaw:/data:ro
    env_file:
      - /home/openclaw/.restic-env
{% endif %}
