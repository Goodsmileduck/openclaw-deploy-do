[Unit]
Description=OpenClaw Gateway
After=network-online.target docker.service
Wants=network-online.target docker.service
{% if telegram_bot_token != "" and telegram_alert_chat_id != "" %}
OnFailure=openclaw-alert@%n.service
{% endif %}

[Service]
Type=simple
User=openclaw
Group=openclaw
EnvironmentFile=/etc/openclaw/gateway.env
Environment=PATH=/home/openclaw/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/home/openclaw/.local/bin/openclaw gateway --port 18789 --verbose
Restart=on-failure
RestartSec=5

NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=read-only
PrivateTmp=true
ReadWritePaths=/home/openclaw/.openclaw /home/openclaw/.local{% if enable_browser | default(false) | bool %} /home/openclaw/.config{% endif %}

[Install]
WantedBy=multi-user.target
