do_token             = "your-digitalocean-api-token"
ssh_public_key_path  = "~/.ssh/id_do_ssh.pub"
region               = "nyc3"
droplet_size         = "s-2vcpu-4gb"
droplet_name         = "openclaw-server"
access_method        = "ssh_tunnel"  # ssh_tunnel | https
# domain_name        = "openclaw.example.com"  # Required for https access_method
# enable_tailscale   = false  # Combinable with any access_method

# Claude setup-token (from: claude setup-token)
# claude_setup_token = "your-setup-token"

# Telegram bot token (from @BotFather)
# telegram_bot_token = "your-bot-token"

# OpenClaw version (npm package)
# openclaw_version   = "latest"

# Agent sandbox mode: off | non-main | all
# sandbox_mode       = "non-main"

# DigitalOcean project name
# project_name       = "OpenClaw"

# Pre-baked image (optional — leave empty for vanilla Ubuntu 24.04)
# Build with: cd packer && packer build -var "do_token=$DO_TOKEN" .
# custom_image_id    = "123456789"

# LLM providers — first is primary, add more for runtime switching via /model
# llm_providers = [
#   { name = "anthropic", api_key = "" },
#   { name = "openai", api_key = "" },
#   { name = "openrouter", api_key = "" },
# ]

# ---------------------------------------------------------------------------
# Ansible-only variables (not managed by Terraform)
# Edit ansible/group_vars/all.yml or pass via --extra-vars / ansible-vault:
#   acme_email, acme_challenge, acme_dns_token   — HTTPS/TLS settings
#   enable_backup, spaces_*, restic_password      — Restic backup to DO Spaces
#   enable_control_ui                             — OpenClaw Control UI
#   openclaw_channels                             — Channel integrations
#   tailscale_auth_key                            — Tailscale pre-auth key
# ---------------------------------------------------------------------------
